import pandas as pd
import matplotlib.pyplot as plt
# Read the data from "averages_lammps.txt" using Pandas
averages_lammps = pd.read_csv("averages_lammps.txt", delimiter=" ", skiprows=[0], names=['Temp', 'Epot_std', 'Ekin_std', 'Etot_std', 'Press_std', 'Vol_std', 'Epot', 'Ekin', 'Etot', 'Press', 'Vol'])

# Plot average Epot vs. temperature
#plt.plot(averages_lammps['Temp'], averages_lammps['Epot'], "ko--", label="Average Potential Energy")
plt.errorbar(x=averages_lammps['Temp'], y=averages_lammps['Epot'], yerr=averages_lammps['Epot_std'], fmt="ko--", label="Average Potential Energy")
plt.xlabel('Temperature (K)')
plt.ylabel('Average Potential Energy')
plt.title('Average Potential Energy vs. Temperature')
plt.legend()
plt.grid(True)
plt.savefig('average_potential_energy.png')
plt.show()
# Plot average Ekin vs. temperature
##plt.plot(averages_lammps['Temp'], averages_lammps['Ekin'], "bo--", label="Average Kinetic Energy")
plt.errorbar(x=averages_lammps['Temp'], y=averages_lammps['Ekin'], yerr=averages_lammps['Ekin_std'], fmt="bo--", label="Average Kinetic Energy")
plt.xlabel('Temperature (K)')
plt.ylabel('Average Kinetic Energy')
plt.title('Average Kinetic Energy vs. Temperature')
plt.legend()
plt.grid(True)
plt.savefig('average_kinetic_energy.png')
plt.show()
# Plot average Etot vs. temperature
#plt.plot(averages_lammps['Temp'], averages_lammps['Etot'], "go--", label="Average Total Energy")
plt.errorbar(x=averages_lammps['Temp'], y=averages_lammps['Etot'], yerr=averages_lammps['Etot_std'], fmt="go--", label="Average Total Energy")
plt.xlabel('Temperature (K)')
plt.ylabel('Average Total Energy')
plt.title('Average Total Energy vs. Temperature')
plt.legend()
plt.grid(True)
plt.savefig('average_total_energy.png')
plt.show()
# Plot average Press vs. temperature
#plt.plot(averages_lammps['Temp'], averages_lammps['Press'], "ro--", label="Average Pressure")
plt.errorbar(x=averages_lammps['Temp'], y=averages_lammps['Press'], yerr=averages_lammps['Press_std'], fmt="ro--", label="Average Pressure")
plt.xlabel('Temperature (K)')
plt.ylabel('Average Pressure')
plt.title('Average Pressure vs. Temperature')
plt.legend()
plt.grid(True)
plt.savefig('average_pressure.png')
plt.show()
# Plot average Vol vs. temperature
#plt.plot(averages_lammps['Temp'], averages_lammps['Vol'], "yo--", label="Average Volume")
plt.errorbar(x=averages_lammps['Temp'], y=averages_lammps['Vol'], yerr=averages_lammps['Vol_std'], fmt="yo--", label="Average Volume")
plt.xlabel('Temperature (K)')
plt.ylabel('Average Volume')
plt.title('Average Volume vs. Temperature')
plt.legend()
plt.grid(True)
plt.savefig('average_volume.png')
plt.show()